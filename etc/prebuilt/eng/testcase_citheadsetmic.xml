<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:ftm="http://schemas.ftm.com/res/ftm"
    ftm:layout_width="match_parent" 
    ftm:layout_height="match_parent"
    ftm:id="linearLayout"
	ftm:layout_weight="20" 
    ftm:orientation="vertical" >
	<Title
        ftm:layout_width="match_parent"  
        ftm:layout_height="wrap_content" 
        ftm:id="title"
		ftm:orientation="horizontal"
        ftm:layout_weight="1">
	<ImageView 
		ftm:drawable="icon-drawable-mdpi"
		ftm:layout_width="wrap_content"  
        ftm:layout_height="wrap_content"
		ftm:layout_gravity="vertical_center"
		ftm:id="titleIcon" 
    	ftm:layout_toLeftMargin="8"/>
	 <TextView      
		ftm:text="Earphone and Microphone"   
		ftm:textColor="white"
		ftm:layout_width="wrap_content"  
		ftm:layout_height="wrap_content"
		ftm:layout_gravity="vertical_center"		
		ftm:layout_toLeftMargin="4"
		ftm:id="titleName" />

   </Title>
	<View      
		ftm:layout_width="match_parent"  
		ftm:layout_height="match_parent"
		ftm:layout_weight="19">
	
	<SectionLine
		ftm:id="title_split_line"
		ftm:layout_width="match_parent"  
        ftm:layout_height="6" 
		ftm:background="dark blue"/>
    

	</View >
	
	<BottomLayout
		ftm:layout_width="match_parent"  
        ftm:layout_height="wrap_content" 
        ftm:id="bottomlayout"
		ftm:background="blue" 
		ftm:layout_gravity="bottom"
        ftm:orientation="horizontal"
        ftm:layout_weight="2" >
	<LinearLayout 
		ftm:layout_width="wrap_content"  
		ftm:layout_height="wrap_content"
		ftm:layout_gravity="center"
		ftm:id="linearLayout2"
		ftm:orientation="horizontal" > 
		 <Button
			ftm:text="PASS"   
			ftm:textColor="white"
			ftm:layout_width="wrap_content"  
			ftm:layout_height="wrap_content" 
			ftm:background="blue" 
			ftm:ctrl_state="normal"
			ftm:toLeftMargin="32"
			ftm:toRightMargin="32"
			ftm:toTopMargin="16"
			ftm:toBottomMargin="16"
			ftm:id="testcase_pass"/>
		<Button
			ftm:text="FAIL"   
			ftm:textColor="white"
			ftm:layout_toLeftMargin="20"
			ftm:layout_width="wrap_content"  
			ftm:layout_height="wrap_content"
			ftm:ctrl_state="normal"
			ftm:background="blue" 
			ftm:toLeftMargin="32"
			ftm:toRightMargin="32"
			ftm:toTopMargin="16"
			ftm:toBottomMargin="16"
			ftm:id="testcase_fail"/>
		<Button
			ftm:text="REPEAT"   
			ftm:textColor="white"
			ftm:layout_toLeftMargin="20"
			ftm:layout_width="wrap_content"  
			ftm:layout_height="wrap_content"
			ftm:background="blue" 
			ftm:ctrl_state="normal"
			ftm:toLeftMargin="32"
			ftm:toRightMargin="32"
			ftm:toTopMargin="16"
			ftm:toBottomMargin="16"
			ftm:id="test_repeat"/>
	</LinearLayout>

  </BottomLayout>

</LinearLayout>  
